<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/trafficRow"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="#A0909090"
        android:gravity="bottom"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/trafficDownLabel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="Down"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trafficUpLabel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|center_horizontal"
            android:text="Up"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trafficDown"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/trafficDownLabel"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#FF00B627"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trafficUp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/trafficUpLabel"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#FFFF2211"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trafficDownRate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/trafficDown"
            android:gravity="center_vertical|center_horizontal"
            android:padding="0dp"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/trafficUpRate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/trafficUp"
            android:gravity="center_vertical|center_horizontal"
            android:padding="0dp"
            android:textColor="#FFFFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/trafficRow"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:text="Start" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignRight="@+id/trafficRow"
        android:text="Stop" />

    <CheckBox
        android:id="@+id/dns2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/trafficRow"
        android:layout_alignLeft="@+id/trafficRow"
        android:layout_marginBottom="20dp"
        android:text="DNS 4.2.2.2" />

    <CheckBox
        android:id="@+id/dns1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dns2"
        android:layout_alignLeft="@+id/dns2"
        android:layout_marginBottom="20dp"
        android:text="DNS 8.8.8.8" />

    <CheckBox
        android:id="@+id/gwRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dns1"
        android:layout_alignLeft="@+id/dns1"
        android:layout_marginBottom="20dp"
        android:text="Gateway route " />

    <CheckBox
        android:id="@+id/gwPing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gwRoute"
        android:layout_alignLeft="@+id/gwRoute"
        android:layout_marginBottom="20dp"
        android:text="Gateway ping" />

</RelativeLayout>